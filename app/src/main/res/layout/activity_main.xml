<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fix_homebg_woi"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/atas_dalil_bg"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:src="@drawable/atas_dalil_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/atas_petunjuk_bg"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/atas_petunjuk_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/atas_dalil_bg"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/btn_kotak_1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/menu1_home_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/atas_petunjuk_bg"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:text="Iqro                '"/>

    <Button
        android:id="@+id/btn_kotak_2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/menu2_home_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_kotak_1"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:text="Setting             '"/>

    <Button
        android:id="@+id/btn_kotak_3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/menu3_home_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_kotak_2"
        app:layout_constraintVertical_bias="0.217"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:text="Rate Us             '"/>

    <Button
        android:id="@+id/btn_kotak_4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/menu4_home_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_kotak_3"
        app:layout_constraintVertical_bias="0.28"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:text="Exit                '"/>

    <ImageView
        android:id="@+id/bwh_home_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bwh_home_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_percent="0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.06"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_percent="0" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Version : 1.0"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_percent="0"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_percent="0" />

</androidx.constraintlayout.widget.ConstraintLayout>